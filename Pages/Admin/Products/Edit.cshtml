@page
@model Haitian_Market.Pages.Admin.Products.EditModel
@{
}
<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5 ">New Product</h2>
        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.errorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" la></button>
            </div>
        }
        else if (Model.successMessage.Length > 0)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" la></button>
            </div>
        }

        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">ID</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Product.Id" />
                  

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Nam</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProducDto.Name" />
                    <span asp-validation-for="ProducDto.Name" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProducDto.Brand" />
                    <span asp-validation-for="ProducDto.Brand" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="ProducDto.Category">
                        <option value="Other"> Other</option>
                        <option value="Computers"> Computers</option>
                        <option value="Phones"> Phones</option>
                        <option value="Accessories"> Accessories</option>
                        <option value="Printers"> Printers</option>
                        <option value="Cameras"> Cameras</option>
                        <option value="watches"> watches</option>
                    </select>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProducDto.Price" />
                    <span asp-validation-for="ProducDto.Price" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="ProducDto.Description"> </textarea>
                    <span asp-validation-for="ProducDto.Description" class="text-danger"></span>

                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                  <img src="~/Products/@Model.Product.ImageFileName" width="150"/>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ProducDto.ImageFile" />
                    <span asp-validation-for="ProducDto.ImageFile" class="text-danger"></span>

                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Create At</label>
                <div class="col-sm-8">
                    <input readonly class="form-control-plaintext" value="@Model.Product.CreatedAt.ToString("MM/dd/yyyyy")" />
                   

                </div>
            </div>
            <div class="row mb-3">

                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class=" btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-area="" asp-page="/Admin/Products/Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>